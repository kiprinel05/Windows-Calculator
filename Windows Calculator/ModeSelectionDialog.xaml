<Window x:Class="WPFCalculator.Views.ModeSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Mode" Height="200" Width="300" ResizeMode="NoResize">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <RadioButton x:Name="StandardModeRadio" Content="Standard Mode" IsChecked="True" Margin="10"/>
        <RadioButton x:Name="ProgrammerModeRadio" Content="Programmer Mode" Margin="10"/>
        <Button Content="OK" Width="100" Margin="10" Click="OKButton_Click"/>
    </StackPanel>
</Window>